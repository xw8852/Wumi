<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/action_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActionBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/action_bar_button_back"
        style="@style/ActionBarButton"
        android:src="@drawable/nav_arrow_back"/>

    <TextView
        android:id="@+id/action_bar_textview_title"
        style="@style/ActionBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="left|center_vertical"/>

    <FrameLayout
        android:id="@+id/action_bar_textview_custom_title_container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:visibility="visible"/>

    <ViewSwitcher
        android:id="@+id/action_bar_button_action"
        android:visibility="gone"
        android:layout_width="@dimen/action_bar_button_width"
        android:layout_height="fill_parent"/>
</LinearLayout>