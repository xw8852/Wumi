<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height_small"
    android:background="@color/grey_5"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:src="@drawable/btn_dock_home" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:src="@drawable/btn_dock_search"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:src="@drawable/dock_camera" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"

        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/btn_dock_news" />
        <TextView
            android:layout_width="18dp"
            android:minWidth="15dp"
            android:minHeight="15dp"
            android:layout_height="18dp"
            android:layout_gravity="right|top"
            android:id="@+id/tip"
            android:visibility="gone"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:textSize="@dimen/font_xsmall"
            android:textColor="@color/white"
            android:background="@drawable/roud_circle_rect"
             />
    </FrameLayout>


    <ImageView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:src="@drawable/btn_dock_profile" />

</LinearLayout>