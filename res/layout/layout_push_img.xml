<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@color/white"
            android:padding="@dimen/row_text_button_padding">

            <ImageView
                android:layout_width="@dimen/row_height_small"
                android:id="@+id/img"
                android:layout_height="@dimen/row_height_small"
                android:src="@drawable/profile_anonymous_user" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/desc"
                android:layout_marginLeft="@dimen/row_text_button_padding"
                android:hint="添加照片说明..." />
        </LinearLayout>

        <include layout="@layout/row_divider" />

        <include
            layout="@layout/row_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/row_text_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/people"
            android:padding="@dimen/row_text_padding"
            android:text="圈人" />

        <include layout="@layout/row_divider" />

        <include layout="@layout/row_divider" />

        <include
            layout="@layout/row_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/row_text_padding" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/address"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/row_text_padding"
                android:text="添加地点" />
            <TextView
                android:layout_width="wrap_content"
                android:text=""
                android:id="@+id/address1"
                android:visibility="gone"
                android:textColor="@color/grey_3"
                android:paddingLeft="@dimen/row_text_padding"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <include layout="@layout/row_divider" />

        <!--<include-->
            <!--layout="@layout/row_divider"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:layout_marginTop="@dimen/row_text_padding" />-->

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/white"-->
            <!--android:id="@+id/action"-->
            <!--android:padding="@dimen/row_text_padding"-->
            <!--android:text="添加活动" />-->

        <!--<include layout="@layout/row_divider" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@color/accent_blue_5"
            android:gravity="center"
            android:id="@+id/share"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/row_height"
                android:gravity="center"
                android:text="分享"
                android:textSize="@dimen/font_large"
                android:textColor="@color/white" />

            <ImageView
                android:layout_marginLeft="@dimen/row_text_button_padding"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/nav_arrow_next" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
