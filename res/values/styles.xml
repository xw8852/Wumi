<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="transparent_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        - <!--  边框
 -->
        <item name="android:windowIsFloating">true</item>
        - <!--  是否浮现在activity之上
 -->
        <item name="android:windowIsTranslucent">false</item>
        - <!--  半透明
 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        - <!--  模糊
 -->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>


    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:autoCompleteTextViewStyle">@style/IgAutoCompleteTextView</item>
        <item name="android:checkboxStyle">@style/IgTextboxStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:tabWidgetStyle">@android:style/Widget.TabWidget</item>
        <item name="android:progressBarStyle">@style/AppProgressBar</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:textColorLink">@color/accent_blue_medium</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:dialogTheme">@style/transparent_dialog</item>
    </style>

    <style name="AppProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_holo</item>
    </style>

    <!--<item name="switchStyle">@style/IgSwitchStyle</item>-->

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/grey_medium</item>
    </style>
    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textColorHint">@color/grey_light</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingLeft">@dimen/row_text_padding</item>
        <item name="android:paddingRight">@dimen/row_text_padding</item>
    </style>
    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textColorLink">@color/accent_blue_medium</item>
    </style>
    <style name="IgTextboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/grey_medium</item>
    </style>
    <style name="IgAutoCompleteTextView" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textColorHint">@color/grey_light</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:popupBackground">@drawable/spinner_background_dropdown</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>


    <style name="ActionBar">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
    </style>
    <style name="ActionBar.Dark" parent="@style/ActionBar">
        <item name="android:background">@drawable/dark_action_bar_background</item>
    </style>
    <style name="ActionBarTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/action_bar_item_padding</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ActionBarButtonText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ActionBarButton">
        <item name="android:background">@drawable/action_bar_blue_button_background</item>
        <item name="android:layout_width">@dimen/action_bar_height</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="ActionBarButton.LightBlue" parent="@style/ActionBarButton">
        <item name="android:background">@drawable/action_bar_light_blue_button_background</item>
    </style>
    <style name="ActionBarButton.Dark" parent="@style/ActionBarButton">
        <item name="android:background">@drawable/action_bar_dark_button_background</item>
    </style>
    <style name="ActionBarButton.Black" parent="@style/ActionBarButton">
        <item name="android:background">@drawable/action_bar_black_button_background</item>
    </style>
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>